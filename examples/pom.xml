  <packaging>jar</packaging>
  <name>examples</name>
  <url>http://github.com/ljr/OnlineBroker/</url>

  <dependencies>
    <dependency>
      <groupId>br.usp.icmc.lasdpc.cloudsim</groupId>
      <artifactId>broker</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>org.cloudbus.cloudsim</groupId>
      <artifactId>cloudsim</artifactId>
      <version>3.1-SNAPSHOT</version>
      <scope>system</scope>
      <systemPath>/home/ljr/workspace/cloudsim-package/modules/cloudsim/target/cloudsim-3.1-SNAPSHOT.jar</systemPath>
